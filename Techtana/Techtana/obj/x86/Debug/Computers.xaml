<Page
    x:Class="Techtana.Computers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Techtana"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Button" x:Key="NavigationButtonStyle">
            <Setter Property="Background" Value="#FF273A4D" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="BorderBrush" Value="#FF6EE4DF" />
            <Setter Property="BorderThickness" Value="0,0,2,0" />
        </Style>
        <Style TargetType="Image" x:Key="IconImageStyle">
            <Setter Property="Height" Value="20" />
            <Setter Property="Width" Value="20" />
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>
    </Page.Resources>

    <Grid Background="#FF273A4D">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Background="Black" BorderBrush="#FFB1E8FD">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                
            </Grid.ColumnDefinitions>


            <Button x:ConnectionId='2' Name="Request" 
                                                Grid.Column="0" Style="{StaticResource NavigationButtonStyle}" Background="#FF3F4145" BorderBrush="White">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="20" Text="&#xEC24;" />
                    <TextBlock Text="      Request" Foreground="White" />
                </StackPanel>
            </Button>

            <Button x:ConnectionId='3' Name="Manage" 
                                               Grid.Column="1" Style="{StaticResource NavigationButtonStyle}" Background="#FF3F4145" BorderBrush="White">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="20" Text="&#xE71D;" />
                    <TextBlock Text="      Manage" Foreground="White" />
                </StackPanel>
            </Button>

            

        </Grid>

        <Grid Grid.Row="1">
           
            <Frame x:ConnectionId='1' Name="Guide">
                <Canvas HorizontalAlignment="Left" Height="516" Margin="44,43,0,0" VerticalAlignment="Top" Width="1060"/>
            </Frame>
            
        </Grid>


   


    </Grid>
</Page>

